{% extends "base.html.twig" %}

{% block title %}Update book{% endblock %}

{% block body %}
    <form method="post" action="">
        <label for="titel">Titel:</label>
        <input type="text" name="titel" maxlength="255" value="{{book.titel}}" readonly>
        <label for="author">Author:</label>
        <input type="text" name="author" maxlength="255" value="{{book.author}}" readonly>
        <label for="isbn">ISBN:</label>
        <input type="text" name="isbn" minlength="13" maxlength="13" value="{{book.isbn}}" readonly>
        <label for="image">Image url:</label>
        <input type="text" name="image" maxlength="2048" value="{{book.image}}" readonly>
        <input type="submit" name="POST library/delete_book_post" value="Delete book"
        onClick="this.form.action='{{ path('delete_book_post') }}';this.form.method='post';"
        >
    </form>
{% endblock %}